{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/about", "destination": "/about.html" },
    { "source": "/contact", "destination": "/contact.html" },
    { "source": "/reviews", "destination": "/reviews.html" },
    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/sitemap", "destination": "/sitemap.html" },
    { "source": "/services", "destination": "/services/index.html" },
    { "source": "/locations", "destination": "/locations/index.html" },
    { "source": "/locations/:city", "destination": "/locations/:city.html" },
    { "source": "/services/:service", "destination": "/services/:service/index.html" },
    { "source": "/services/:service/:city", "destination": "/services/:service/:city.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
