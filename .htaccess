# Dorys Cleaning Services - URL Rewriting & SEO Redirects
# Last updated: 2026-01-06

# Enable rewrite engine
RewriteEngine On

# ===========================================
# FORCE HTTPS AND NON-WWW (CANONICAL)
# ===========================================

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Force non-www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ===========================================
# LEGACY URL REDIRECTS (OLD SITE VERSIONS)
# ===========================================

# Old WordPress/landing page patterns → Homepage
RewriteRule ^dorys-janitorial-cleaning-services-(.*)$ /services/janitorial-service/$1-ma [R=301,L]
RewriteRule ^home-(.*)$ / [R=301,L]
RewriteRule ^index\.php$ / [R=301,L]
RewriteRule ^page\.php$ / [R=301,L]

# Old technical URLs → 410 Gone (tell Google to forget them)
RewriteRule ^tmp/ - [R=410,L]
RewriteRule ^workspace/ - [R=410,L]
RewriteRule ^builder-preview/ - [R=410,L]
RewriteRule ^locales/(.*)\.json$ - [R=410,L]
RewriteRule ^search/ - [R=410,L]
RewriteRule ^portal\.php$ - [R=410,L]
RewriteRule ^calendar - [R=410,L]

# Thank you pages → noindex (but still serve them)
# These are handled via meta robots in the HTML

# ===========================================
# 301 REDIRECTS - .html to Clean URLs
# ===========================================

# Redirect old .html URLs to clean URLs (all pages)
RewriteCond %{THE_REQUEST} /([^.]+)\.html[\s\?] [NC]
RewriteRule ^ /%1 [R=301,L,NC]

# Redirect index.html to root
RewriteRule ^index\.html$ / [R=301,L]

# Redirect locations/index.html to /locations
RewriteRule ^locations/index\.html$ /locations [R=301,L]

# Redirect services/index.html to /services
RewriteRule ^services/index\.html$ /services [R=301,L]

# Redirect service hub index.html files
RewriteRule ^services/([^/]+)/index\.html$ /services/$1 [R=301,L]

# ===========================================
# URL CLEANUP
# ===========================================

# Remove trailing slash (except for directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]

# Remove query strings from clean URLs (if any)
RewriteCond %{QUERY_STRING} .+
RewriteCond %{REQUEST_URI} !^/assets/
RewriteRule ^(.*)$ /$1? [R=301,L]

# ===========================================
# INTERNAL REWRITES (no redirect, just serve)
# ===========================================

# Serve .html file for clean URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# ===========================================
# ERROR PAGES
# ===========================================
ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
ErrorDocument 410 /404.html
ErrorDocument 500 /500.html

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json
</IfModule>
